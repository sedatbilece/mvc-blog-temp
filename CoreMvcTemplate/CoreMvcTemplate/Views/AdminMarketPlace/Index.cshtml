@using CoreMvcTemplate.Entities
@using CoreMvcTemplate.Helpers;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    TempData["Title"] = "Pazar Yerleri";
}
@model List<MarketPlace>

<div class="row p-4">
    <div class="col-xs-12">
        <div class="box">

            <div class="d-flex justify-content-between align-items-center width-full">
                <div class="p-2">
                    <h3 class="box-title">Pazar Yerleri</h3>
                </div>
                <div class="p-2">
                    <a asp-controller="AdminMarketPlace" asp-action="Add" style="text-decoration: none;" class="btn btn-sm btn-success">Ekle</a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                </div>
            }

            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Adı</th>
                        <th>Başlık</th>
                        <th>Link</th>
                        <th>Görüntüleme Sırası</th>
                        <th>Düzenle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.RedirectUrl</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <a asp-controller="AdminMarketPlace" asp-action="Detail" asp-route-id="@item.Id" style="text-decoration: none;" class="btn btn-sm btn-primary">Düzenle</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>