@using CoreMvcTemplate.Models.Account;
@{
	Layout = null;

}
@model LoginViewModel



<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CoreMvcTemplate</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CoreMvcTemplate.styles.css" asp-append-version="true" />
	<style>
		body {
			background-color:rgba(156,194,93,0.5)
		}

		.formBox{
			background-color: white;
			padding:20px;
			border-radius:10px;

		}
	</style>
</head>
<body>
	

	<div class="d-flex align-items-center justify-content-center" style="height: 80vh;" >
		<div class="formBox">


			<div><img src="~/site-images/logo.png"/></div>


			@if (TempData["Error"] != null)
			{
				<div class="alert alert-danger" role="alert">
					@TempData["Error"]
				</div>
			}
			<form method="post" asp-action="Login" asp-controller="Account">

				<input hidden asp-for="ReturnUrl" value="@Model.ReturnUrl" />
				<hr />
				<h5><b>Admin Panel Girişi</b></h5>
				<hr />
				<div class="form-group m-2">
					<label for="UserName"><b>Kullanıcı Adı : </b></label>
					<input type="text" class="form-control" id="UserName" aria-describedby="UserName"  asp-for="UserName">
				</div>

				<div class="form-group m-2">
					<label for="Password"><b>Şifre : </b></label>
					<input type="password" class="form-control" id="Password"  asp-for="Password">
				</div>
				<div class="form-group m-2">
					<button type="submit" class="btn btn-sm btn-primary">Giriş</button>
				</div>

				
			</form>

		</div>

	</div>





	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>